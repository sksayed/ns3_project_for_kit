{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Configure (GCC, C++17)",
        "type": "shell",
        "command": "./ns3 configure --cxx-standard=17",
        "options": {
          "env": {
            "CC": "/usr/bin/gcc",
            "CXX": "/usr/bin/g++"
          }
        },
        "problemMatcher": []
      },
      {
        "label": "Build (GCC)",
        "type": "shell",
        "command": "./ns3 build",
        "dependsOn": "Configure (GCC, C++17)",
        "group": { "kind": "build", "isDefault": true }
      },
      {
        "label": "Configure (Clang, C++17)",
        "type": "shell",
        "command": "./ns3 configure --cxx-standard=17",
        "options": {
          "env": {
            "CC": "/usr/bin/clang",
            "CXX": "/usr/bin/clang++"
          }
        },
        "problemMatcher": []
      },
      {
        "label": "Build (Clang)",
        "type": "shell",
        "command": "./ns3 build",
        "dependsOn": "Configure (Clang, C++17)"
      },
      {
        "label": "Run tests",
        "type": "shell",
        "command": "./test.py",
        "group": { "kind": "test", "isDefault": true }
      }
    ]
  }